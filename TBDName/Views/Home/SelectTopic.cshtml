@model TBDName.ViewModels.SelectTopicViewModel;

@{
	ViewData["Title"] = "Select a Topic";
}

<h1>Select a Topic</h1>
<p>
	You are playing in <b>
		@(Model.Subdivision != null ? Model.Subdivision.Name : "Federal Level")
	</b> of <b>@Model.Country.Name</b>
</p>

<div class="card-container">
	@foreach(var topic in Model.Topics) 
	{
		
		<div class="card card-topic" onclick="toggleDropdown("@topic.Id")">
			<h2>@topic.Name</h2>
		</div>
		<a class="link-primary" asp-controller="Game" asp-action="Index" asp-route-level="1" asp-route-topic="topic.Id"><button>level 1</button></a>
		<a class="link-primary" asp-controller="Game" asp-action="Index" asp-route-level="2" asp-route-topic="topic.Id"><button>level 2</button></a>
		<a class="link-primary" asp-controller="Game" asp-action="Index" asp-route-level="3" asp-route-topic="topic.Id"><button>level 3</button></a>
		<a class="link-primary" asp-controller="Game" asp-action="Index" asp-route-level="4" asp-route-topic="topic.Id"><button>level 4</button></a>
		<a class="link-primary" asp-controller="Game" asp-action="Index" asp-route-level="5" asp-route-topic="topic.Id"><button>level 5</button></a>
		<a class="link-primary" asp-controller="Game" asp-action="Index" asp-route-level="6" asp-route-topic="topic.Id"><button>Quiz</button></a>
	}
</div>