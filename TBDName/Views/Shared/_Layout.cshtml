<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TBDName</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TBDName.styles.css" asp-append-version="true" />
</head>
<body class="fade-in">
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; Josh Proper - Aden Hirdes - Jacob MacPhail-McAughey - Paulo Medeiros- 2025 - TBDName - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Select all links inside the page
            document.querySelectorAll("a").forEach(link => {
                link.addEventListener("click", function (event) {
                    const target = event.target;

                    // Ensure link is not opening in a new tab or an external site
                    if (target.hostname === window.location.hostname && !target.hasAttribute("target")) {
                        event.preventDefault(); // Stop default navigation

                        document.body.classList.add("fade-out"); // Apply fade-out effect

                        // Wait for animation to complete before navigating
                        setTimeout(() => {
                            window.location.href = target.href;
                        }, 500); // Match the animation duration
                    }
                });
            });
        });
    </script>
</body>
</html>
